# vim: set ft=sxhkdrc:
#
# bspwm hotkeys
#

# Exit bspcwm
alt + shift + q
    bspc quit

# Reload panels
#alt + q
#    pkill panel && pkill bar && /home/chiggins/.dot/random-scripts/panel

# deepin-screenshot
alt + ctrl + shift + F4
    deepin-screenshot

# Close window
alt + shift + x
    bspc node -c

#alt + ctrl + shift + x
#   bspc  window -k

# Toggle tile
alt + {_,shift +} t
    bspc node -t {floating,fullscreen}

# Balance tree
alt + b
    bspc desktop -B

# TODO: Presel window for splitting
alt + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Move window into presel position
alt + ctrl + shift {h,j,k,l}
    bspc node -n {west,south,north,east}

# Select windows, or move
alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Move/resize
alt + {a,s,d,f}
    bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

alt + shift + {a,s,d,f}
    bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}

# Move current window to largest space
alt + Return
    bspc node -s biggest

# Circulate leaves of tree
alt + {comma,period}
    bspc desktop -f {prev,next}

alt + shift + {comma,period}
    bspc desktop -R {90,270}

# Select previous / next desktop
alt + {p,n}
    bspc desktop -f {prev.occupied,next.occupied} 

# Cancel preselection for splitting
alt + Escape
    bspc desktop -c

alt + space 
    bspc desktop -l next

alt + minus
    bspc config window_gap $((`bspc config window_gap` - 5 ))

alt + plus
    bspc config window_gap $((`bspc config window_gap` + 5 ))

# Set splitting ratio of windows
alt + ctrl + {1-9}
    bspc node -r 0.{1-9}

# Focus or move window to desktops
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} $(bspc query -M -m --names)/{I,II,III,IV,V,VI,VII,VIII,IX,X}

~button1
    bspc pointer -g focus

# Move or resize window
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#


alt + shift + Return
    urxvt

alt + ctrl + Return
    urxvt && bspc window -t floating

alt + r
    gmrun

alt + shift + i
    chromium

alt + shift + n
    xterm

XF86AudioRaiseVolume
    amixer -q set Master 5+ && mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioLowerVolume
    amixer -q set Master 5- && mplayer /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
  xbacklight -dec 10

XF86AudioMute
    /home/sunn/scripts/dvol2 -t 

XF86Sleep
    pm-suspend

XF86AudioPlay
    ncmpcpp toggle
    
XF86AudioNext
    ncmpcpp next

XF86AudioPrev
    ncmpcpp prev

Print
    scrot -q 100

super + l
    xscreensaver-command --lock

# make sxhkd reload its configuration files:
alt + shift + Escape
    pkill -USR1 -x sxhkd

# make wkline reload
alt + shift + w
  killall wkline && wkline &
